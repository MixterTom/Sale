<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>DefaultFilter</filter-name>
        <filter-class>io.hardingadonis.saledock.filter.DefaultFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DefaultFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CheckLoginFilter</filter-name>
        <filter-class>io.hardingadonis.saledock.filter.CheckLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/customer-detail</url-pattern>
        <url-pattern>/add-customer</url-pattern>
        <url-pattern>/order</url-pattern>
        <url-pattern>/order-detail</url-pattern>
        <url-pattern>/add-order</url-pattern>
        <url-pattern>/product</url-pattern>
        <url-pattern>/product-detail</url-pattern>
        <url-pattern>/add-product</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
